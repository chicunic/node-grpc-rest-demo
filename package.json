{
  "name": "node-grpc-rest-demo",
  "version": "1.0.0",
  "description": "Node.js template with gRPC and REST API support",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc --build --clean && tsc --build",
    "start": "node dist/index.js",
    "start:grpc": "node dist/grpc/server.js",
    "dev": "tsx watch src/index.ts",
    "dev:grpc": "tsx watch src/grpc/server.ts",
    "typecheck": "tsc --noEmit && tsc --noEmit --project tsconfig.test.json",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint 'src/**/*.{ts,tsx}' 'tests/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' 'tests/**/*.{ts,tsx}' --fix",
    "check": "pnpm run typecheck && pnpm run lint && pnpm run format",
    "fix": "pnpm run lint:fix && pnpm run format:fix",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --verbose",
    "test:watch": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --watch --verbose",
    "test:coverage": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage --verbose",
    "test:integration": "NODE_OPTIONS=\"--experimental-vm-modules\" jest tests/specs/integration --verbose",
    "postinstall": "chmod +x setup-hooks.sh && ./setup-hooks.sh"
  },
  "keywords": [
    "grpc",
    "rest",
    "api",
    "template",
    "typescript",
    "nodejs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/logging-winston": "^6.0.1",
    "@grpc/grpc-js": "^1.14.0",
    "@grpc/proto-loader": "^0.8.0",
    "@grpc/reflection": "^1.0.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-openapi-validator": "^5.6.0",
    "grpc-health-check": "^2.1.0",
    "helmet": "^8.1.0",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@jest/globals": "^30.2.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=22"
  }
}
